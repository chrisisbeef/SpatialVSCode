{
    "name": "spatialvscode",
    "displayName": "Spatial VSCode",
    "description": "Spatial project integration for VSCode",
    "version": "0.0.1",
    "publisher": "FriendsOfSpatial",
    "engines": {
        "vscode": "^1.17.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:/spatialos.json"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "spatial.clean",
                "title": "Clean Project Workspace"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.3",
        "vscode": "^1.1.5",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
